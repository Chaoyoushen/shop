<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd 
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <!-- 配置注解驱动 (处理器映射器 +处理器适配器)-->
    <mvc:annotation-driven/>


       
       <!-- 配置扫描包 -->
       <context:component-scan base-package="org.yufan.rest.controller"/>


    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/order/**"/>
            <bean class="org.yufan.rest.interceptor.LoginInerceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>


    <!--配置日期转换器-->
         <bean class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
             <property name="converters">
                 <set>
                     <bean class="org.yufan.converter.DateConverter"/>
                 </set>
             </property>
         </bean>

    <!--配置全局异常处理器-->
    <bean class="org.yufan.exception.CustomerHandlerException"></bean>

       <!-- 配置视图解析器-->
       <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
           <property name="prefix" value="/WEB-INF/views/"/>
           <property name="suffix" value=".jsp"/>
       </bean>




       
       
</beans>